<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="shop.carrental.mappers.NoticeMapper">

	<resultMap type="noticeVO" id="noticeMap">
		<id property="seq" column="seq" />
		<result property="count" column="count" />
		<result property="good" column="good" />
		<result property="category" column="category" />
		<result property="title" column="title" />
		<result property="writer" column="writer" />
		<result property="content" column="content" />
		<result property="register_date" column="register_date" />
		<result property="update_date" column="update_date" />
	</resultMap>

	<sql id="criteria">
		<trim prefix="(" suffix=")AND" prefixOverrides="OR">
			<foreach collection="searchByArray" item="searchBy">
				<trim prefix="OR">
					<if test="searchBy=='all'">
						<![CDATA[
							UPPER(title) LIKE'%'||UPPER(#{keyword})||'%'OR UPPER(content) LIKE'%'||UPPER(#{keyword})||'%'
						]]>
					</if>
					<if test="searchBy=='title'">
						<![CDATA[
							UPPER(title) LIKE'%'||UPPER(#{keyword})||'%'
						]]>
					</if>
					<if test="searchBy=='content'">
						<![CDATA[
							UPPER(content) LIKE'%'||UPPER(#{keyword})||'%'
						]]>
					</if>
				</trim>
			</foreach>
		</trim>
	</sql>

	<select id="list" resultMap="noticeMap">
		<![CDATA[
			SELECT seq,category,title,writer,content,count,good,register_date,update_date
				FROM
					(
						SELECT /*+INDEX_DESC(notice pk_notice)*/
							ROWNUM rn,seq,category,title,writer,content,count,good,register_date,update_date
							FROM notice
						WHERE
			]]>
		<include refid="criteria"></include>
		<![CDATA[
						ROWNUM<=#{pageNumber}*#{AMOUNT}
					)
				WHERE rn>(#{pageNumber}-1)*#{AMOUNT}
		]]>
	</select>

	<!-- <insert id="insert"> <![CDATA[ INSERT INTO notice (seq,category,title,writer,content) 
		VALUES (seq.NEXTVAL,#{category},#{title},#{writer},#{content}) 
		]]> </insert> -->

	<select id="read" parameterType="long" resultMap="noticeMap">
		<![CDATA[
			SELECT*FROM notice WHERE seq=#{seq}
		]]>
	</select>

	<!-- <delete id="delete"> <![CDATA[ DELETE FROM notice WHERE seq=#{seq} 
		]]> </delete> -->

	<select id="total" resultType="int">
		<![CDATA[
			SELECT COUNT(*)
				FROM notice
			WHERE
		]]>
		<include refid="criteria"></include>
		<![CDATA[
			seq>0
		]]>
	</select>

</mapper>