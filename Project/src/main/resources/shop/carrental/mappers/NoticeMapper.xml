<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="shop.carrental.mappers.NoticeMapper">

	<select id="getNoticeList" resultType="shop.carrental.customerService.domain.NoticeDTO">
		<![CDATA[
			SELECT*FROM notice WHERE seq>0
		]]>
	</select>

	<insert id="insert">
		<![CDATA[
			INSERT INTO notice(seq,title,content,writer)VALUES(notice_seq.NEXTVAL,#{title},#{content},#{writer})
		]]>
	</insert>

	<select id="read" parameterType="long" resultType="shop.carrental.customerService.domain.NoticeDTO">
		<![CDATA[
			SELECT*FROM notice WHERE seq=#{seq}
		]]>
	</select>

	<delete id="delete">
		<![CDATA[
			DELETE FROM notice WHERE seq=#{seq}
		]]>
	</delete>

</mapper>